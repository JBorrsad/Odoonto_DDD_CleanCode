{
  "version": 2,
  "rules": [
    {
      "name": "global_ddd_reglas",
      "description": "Reglas generales para implementación de Domain-Driven Design",
      "type": "mdc",
      "file": "./global/ddd_reglas.mdc",
      "priority": 100,
      "contexts": ["ddd", "arquitectura", "estructura", "reglas"],
      "global": true
    },
    {
      "name": "global_ddd_estructura",
      "description": "Estructura general para proyectos con arquitectura Domain-Driven Design",
      "type": "mdc",
      "file": "./global/ddd_estructura.mdc",
      "priority": 100,
      "contexts": ["ddd", "arquitectura", "estructura"],
      "global": true
    },
    {
      "name": "global_ddd_comunicacion",
      "description": "Flujos de comunicación entre capas en Domain-Driven Design",
      "type": "mdc",
      "file": "./global/ddd_comunicacion.mdc",
      "priority": 100,
      "contexts": ["ddd", "comunicación", "flujos", "capas"],
      "global": true
    },
    {
      "name": "global_entities",
      "description": "Definición de entidades principales del dominio y sus relaciones",
      "type": "mdc",
      "file": "./global/entities.mdc",
      "priority": 90,
      "contexts": ["entidades", "modelo", "dominio"],
      "global": true
    },
    {
      "name": "pattern_domain_entity",
      "description": "Reglas para entidades de dominio",
      "type": "pattern",
      "file": "./patterns/domain_entity.json",
      "priority": 200,
      "contexts": ["entidad", "dominio", "domain entity"],
      "patterns": ["**/*[Ee]ntity.cs", "**/Domain/**/Models/**/*.cs"],
      "global": false
    },
    {
      "name": "pattern_domain_repository_interface",
      "description": "Reglas para interfaces de repositorio",
      "type": "pattern",
      "file": "./patterns/domain_repository_interface.json",
      "priority": 200,
      "contexts": ["repositorio", "interfaz", "repository interface"],
      "patterns": ["**/I*Repository.cs", "**/Domain/**/Repositories/**/*.cs"],
      "global": false
    },
    {
      "name": "pattern_data_repository_implementation",
      "description": "Reglas para implementaciones de repositorio",
      "type": "pattern",
      "file": "./patterns/data_repository_implementation.json",
      "priority": 200,
      "contexts": ["repositorio", "implementación", "repository implementation"],
      "patterns": ["**/*Repository.cs", "**/Data/**/Repositories/**/*.cs"],
      "global": false
    },
    {
      "name": "pattern_entity_mapping",
      "description": "Reglas para mapeos de Entity Framework",
      "type": "pattern",
      "file": "./patterns/entity_mapping.json",
      "priority": 200,
      "contexts": ["mapeo", "entity mapping", "configuración"],
      "patterns": ["**/*Mapping.cs", "**/Data/**/Mappings/**/*.cs"],
      "global": false
    },
    {
      "name": "pattern_dto",
      "description": "Reglas para DTOs (Data Transfer Objects)",
      "type": "pattern",
      "file": "./patterns/dto.json",
      "priority": 200,
      "contexts": ["dto", "data transfer", "transferencia de datos"],
      "patterns": ["**/*[Dd]to.cs", "**/Application/**/DTO/**/*.cs", "**/*.dto.*"],
      "global": false
    },
    {
      "name": "pattern_application_service_interface",
      "description": "Reglas para interfaces de servicios de aplicación",
      "type": "pattern",
      "file": "./patterns/application_service_interface.json",
      "priority": 200,
      "contexts": ["servicio", "interfaz", "application service interface"],
      "patterns": ["**/I*AppService.cs", "**/Application/**/Interfaces/**/*.cs"],
      "global": false
    },
    {
      "name": "pattern_application_service",
      "description": "Reglas para implementaciones de servicios de aplicación",
      "type": "pattern",
      "file": "./patterns/application_service.json",
      "priority": 200,
      "contexts": ["servicio", "aplicación", "application service"],
      "patterns": ["**/*AppService.cs", "**/Application/**/Services/**/*.cs"],
      "global": false
    },
    {
      "name": "pattern_automapper_profile",
      "description": "Reglas para perfiles de AutoMapper",
      "type": "pattern",
      "file": "./patterns/automapper_profile.json",
      "priority": 200,
      "contexts": ["mapper", "automapper", "mapeo"],
      "patterns": ["**/*MappingProfile.cs", "**/Application/**/AutoMapper/**/*.cs"],
      "global": false
    },
    {
      "name": "pattern_controller",
      "description": "Reglas para controladores API",
      "type": "pattern",
      "file": "./patterns/controller.json",
      "priority": 200,
      "contexts": ["controlador", "api", "controller"],
      "patterns": ["**/*Controller.cs", "**/Presentation/**/Controllers/**/*.cs"],
      "global": false
    },
    {
      "name": "pattern_infrastructure_inyector",
      "description": "Reglas para inyectores de dependencias",
      "type": "pattern",
      "file": "./patterns/infrastructure_inyector.json",
      "priority": 200,
      "contexts": ["inyector", "dependency injection", "inversión de control"],
      "patterns": ["**/*Inyector.cs", "**/Infraestructure/**/Inyectors/**/*.cs"],
      "global": false
    },
    {
      "name": "pattern_domain_core_entity",
      "description": "Reglas para la clase base Entity",
      "type": "pattern",
      "file": "./patterns/domain_core_entity.json",
      "priority": 200,
      "contexts": ["entity base", "entidad base", "clase base"],
      "patterns": ["**/Domain/**/Core/**/Entity.cs"],
      "global": false
    },
    {
      "name": "pattern_domain_core_repository_interface",
      "description": "Reglas para la interfaz base IRepository",
      "type": "pattern",
      "file": "./patterns/domain_core_repository_interface.json",
      "priority": 200,
      "contexts": ["repository interface base", "interfaz repositorio base"],
      "patterns": ["**/Domain/**/Core/**/IRepository.cs"],
      "global": false
    },
    {
      "name": "pattern_data_core_repository_implementation",
      "description": "Reglas para la implementación base Repository",
      "type": "pattern",
      "file": "./patterns/data_core_repository_implementation.json",
      "priority": 200,
      "contexts": ["repository implementation base", "implementación repositorio base"],
      "patterns": ["**/Data/**/Core/**/Repository.cs"],
      "global": false
    },
    {
      "name": "clean_code",
      "description": "Reglas generales de Clean Code",
      "type": "mdc",
      "file": "./global/clean-code.mdc",
      "priority": 50,
      "contexts": ["clean code", "buenas prácticas", "código limpio"],
      "global": true
    },
    {
      "name": "code_examples",
      "description": "Ejemplos de código para diferentes componentes DDD",
      "type": "mdc",
      "file": "./global/code_examples.mdc",
      "priority": 70,
      "contexts": ["ejemplos", "código", "referencias"],
      "global": true
    }
  ]
} 